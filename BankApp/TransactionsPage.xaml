<Page x:Class="BankApp.TransactionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankApp"
      mc:Ignorable="d" 
      d:DesignHeight="704.04" d:DesignWidth="1130"
      Title="TransactionsPage">

    <Grid Background="#FF28283E">
        <ListBox x:Name="lbxTransactions" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="36,64,412,64" Background="#FF1D1D2F" Foreground="White" FontFamily="Cascadia Mono" BorderThickness="0,0,0,1" BorderBrush="Black"/>
        <TextBlock HorizontalAlignment="Left" Margin="36,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="279" Foreground="White" FontFamily="Arial Black" FontSize="36" FontWeight="Bold"><Run Text="Transaction"/><Run Language="en-ie" Text="s"/><Run Text="s"/></TextBlock>
        <StackPanel Orientation="Horizontal" Margin="310,28,412,658">
            <RadioButton Content="All" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="White" Background="#FF1D1D2F" BorderBrush="White" FontWeight="Bold" Padding="4,0,4,0" ScrollViewer.CanContentScroll="True" Height="25"/>
            <RadioButton Content="Deposits" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="White" Background="#FF1D1D2F" BorderBrush="White" FontWeight="Bold" Padding="4,0,4,0" ScrollViewer.CanContentScroll="True" Height="25"/>
            <RadioButton Content="Withdraws" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="White" Background="#FF1D1D2F" BorderBrush="White" FontWeight="Bold" Padding="4,0,4,0" ScrollViewer.CanContentScroll="True" Height="25"/>
            <RadioButton Content="Crypto" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="White" Background="#FF1D1D2F" BorderBrush="White" FontWeight="Bold" Padding="4,0,4,0" ScrollViewer.CanContentScroll="True" Height="25"/>
        </StackPanel>

    </Grid>
</Page>
